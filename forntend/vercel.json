{
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.9",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/main:app"
    }
  ],
  "build": {
    "env": {
      "PYTHONPATH": "/var/task"
    }
  }
}
